<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BoardingActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/lightmain">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Boarding person's info"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/main"
                />



            <EditText
                android:id="@+id/etName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/etusernmae"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:hint="Full Name" />


            <EditText
                android:id="@+id/etContact"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/etphone"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:hint="Contact Number" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/lightmain">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvBoarding"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:text="Select Boarding Point"
                />


            <Spinner
                android:id="@+id/spBoarding"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvRoute"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/dropdownmain"
                android:screenReaderFocusable="true"
                android:textSize="15dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <Button
        android:id="@+id/btnBoarding"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:backgroundTint="@null"
        android:background="@drawable/btnbg1"
        android:layout_marginTop="20dp"
        android:text="Continue"/>



</LinearLayout>