<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertTicket">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardview1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



        <TextView
            android:id="@+id/btnBooking1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:text="Insert Tickets"
            android:textSize="30dp"
            app:backgroundTint="@null" />


    </LinearLayout>





    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/locationbg" />


            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:text="Route"
                android:textSize="13dp" />


            <Spinner
                android:id="@+id/spRoute"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvRoute"
                android:layout_gravity="center"
                android:background="@drawable/dropdownbg"
                android:outlineAmbientShadowColor="@color/main"
                android:screenReaderFocusable="true"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vehiclebg" />

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/main"
                android:text="Vehicle"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spVehicleType"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/dropdownbg"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/seatbg"/>
            <TextView
                android:id="@+id/tvSeat"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="No. of seat"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/main" />
            <Spinner
                android:id="@+id/spSeat"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/dropdownbg"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvBoarding"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Boarding point"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/main" />
            <Spinner
                android:id="@+id/spBoarding"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/dropdownbg"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageview5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/datebg"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Date"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCalendar"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:textColor="@color/main"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:hint="DD/MM/Year" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="320dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardview4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardview5"
        android:src="@drawable/linebg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview5"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightmain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="Total amt."
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="15dp"
                android:textColor="@color/main"
                />
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Rs.2000"
                android:textColor="@color/orange2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="320dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardview5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintBottom_toTopOf="@id/btnBooking"
        android:src="@drawable/linebg"/>

    <Button
        android:id="@+id/btnBooking"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:background="@drawable/btnbg1"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDy="2"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>