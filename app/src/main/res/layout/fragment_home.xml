<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".ui.home.HomeFragment">


    //LinearLayout
    android:id="@+id/imgv"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:src="@drawable/logomix"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <LinearLayout
        android:id="@+id/linearbg"
        android:layout_width="match_parent"
        android:layout_height="755dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/linearbackdd"
        app:layout_constraintTop_toBottomOf="@+id/imgv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="365dp"
            android:layout_height="82dp"
            android:background="@drawable/backgroundd"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnBooking1"
                android:layout_width="162dp"
                android:layout_height="44dp"
                android:background="@drawable/bookingbtnfinal"
                android:gravity="center"
                app:backgroundTint="@null"
                android:shadowRadius="2"
                android:text="Booking"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnHire"
                android:layout_width="162dp"
                android:layout_height="44dp"
                android:text="Hire"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:shadowRadius="2"
                android:background="@drawable/hirebtnfinal" />

        </LinearLayout>







        <LinearLayout
            android:id="@+id/cardview1"
            android:layout_width="345dp"
            android:layout_height="70dp"
            app:cardMaxElevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardElevation="@null"
            android:gravity="center"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/lightmain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgv">

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/dlocation" />


                <TextView
                    android:id="@+id/tvRoute"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Route"
                    android:textColor="@color/main"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spRoute"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/tvRoute"
                    android:paddingLeft="10dp"
                    android:background="@drawable/ddownfinal"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/cardview2"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@null"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/dvehicle" />

                <TextView
                    android:id="@+id/tvVehicleType"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textColor="@color/main"
                    android:text="Vehicle"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spVehicleType"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/ddownfinal"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardview3"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            app:cardMaxElevation="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@null"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageview4"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dseat"/>
                <TextView
                    android:id="@+id/tvSeat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="No. of seat"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textColor="@color/main"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spSeat"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ddownfinal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardview4"
            android:layout_width="345dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            app:cardMaxElevation="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@null"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imageview5"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dcalender"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Date"
                    android:textColor="@color/main"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCalendar"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:background="@drawable/ddownfinal"
                    android:paddingRight="10dp"
                    android:hint="DD/MM/Year" />
            </LinearLayout>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview5"
            android:layout_width="335dp"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@null"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cardview4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Total amt. (Rs)"
                    android:textColor="@color/main"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="Rs.2000"
                    android:textColor="@color/purple_500"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="6dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cardview5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Continue >"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/btnmain"
                android:shadowColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/cardview5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>