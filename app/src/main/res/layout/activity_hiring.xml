<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HiringActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardview1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        //app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/line0"
        app:layout_constraintRight_toLeftOf="@id/btnHire"
        />


        <Button
            android:id="@+id/btnBooking1"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/bookingbg"
            android:gravity="center"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:text="Booking"
            android:textColor="@color/orange1"
            android:textSize="15dp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Hire"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@null"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:background="@drawable/hirebg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btnBooking1"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/lightmain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vehiclebg" />


            <TextView
                android:id="@+id/tvVhType"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_toRightOf="@+id/imageview1"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:text="Vehicle"
                android:textSize="13dp" />


            <Spinner
                android:id="@+id/spVhType"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvRoute"
                android:layout_gravity="center"
                android:paddingLeft="0dp"
                android:labelFor="@id/spVhType"
                android:outlineAmbientShadowColor="@color/main"
                android:background="@drawable/dropdownbg"
                android:screenReaderFocusable="true"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/lightmain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dayslogo" />


            <TextView
                android:id="@+id/tvDays"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_toRightOf="@+id/imageview1"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:text="Day"
                android:textSize="13dp" />


            <EditText
                android:id="@+id/etHireDays"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_below="@+id/tvRoute"
                android:layout_gravity="center"
                android:paddingLeft="0dp"
                android:hint="how many days"
                android:labelFor="@id/etHireDays"
                android:outlineAmbientShadowColor="@color/main"
                android:background="@drawable/etbgg"
                android:screenReaderFocusable="true"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lightmain"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/datebg"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Date"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCalendar"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="20dp"
                android:hint="Dd/Mm/Year" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lightmain"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_phonenumber"/>

            <TextView
                android:id="@+id/tvcontactinfo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mobile no ."
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etContactInfo"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/etbgg"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:hint="Contact Number"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/btnHiring"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        app:backgroundTint="@null"
        android:background="@drawable/btnbg1"
        android:layout_gravity="center"
        android:text="Continue hiring"
        android:textColor="@color/white"/>



</LinearLayout>